<h2>New Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>2 errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!-- form_with部分 -->
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<!-- ユーザーの詳細 避難コピー -->

<h2>User info</h2>
  <% if @user.profile_image.attached? %>
  <%= image_tag @user.profile_image, size: "300x300" %>
<% else %>
  <%= image_tag 'no_image', size: "300x300" %>
<% end %>

<table class="table">
  <tr>
   <td>name</td><td><%= @user.name %></td>
  </tr>

  <tr>
   <td>introduction</td><td><%= @user.introduction %></td>
  </tr>
</table>

<p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>