<!doctype html>
<html lang="ja">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Books</title>
  </head>

<%= flash[:notice] %>

<div class="container px-5 px-sm 0">
  <div class="row">

    <div class="col-md-3">

    <%= render 'users/show', user: @user, book: @newbook %>

    </div>

     <div class="col-md-8 offset-md-1">


      <h1>Book detail</h1>

        <table class="table table-hover table-inverse">

         <tbody>
                <tr>
                  <td>
                    <% if @user.profile_image.attached? %>
                    <%= image_tag @user.profile_image, size: "100x100" %>
                    <% else %>
                    <%= image_tag 'no_image', size: "100x100" %>
                    <% end %>
                    <br>
                    <%= link_to user_path(@user.id) do %>
                    <%= @user.name %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to book_path(@book.id) do %>
                      <%= @book.title %>
                    <% end %>
                  </td>
                  <td><%= @book.body %></td>
                  <% if @book.user_id == current_user.id %>
                    <td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-primary" %></td>
                    <td><%= link_to "Destroy", book_path(@book[:id]), class: "btn btn-primary", method: :delete, "data-confirm" => "Are you sure?" %></td>
                  <% end %>
                </tr>
         </tbody>
        </table>


     </div>
  </div>
</div>