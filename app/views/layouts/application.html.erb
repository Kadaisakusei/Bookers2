<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <%= link_to "Booker", homes_top_path %>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-link text-light">
            <%= link_to users_path(current_user.id) do %><i class="fas fa-home"></i>Home<% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to  users_path do %><i class="fas fa-users"></i>User<% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to  books_path do %><i class="fas fa-book-open"></i>Books<% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to destroy_user_session_path, method: :delete do %><i class="fas fa-sign-out-alt"></i>Logout<% end %>
            </li>
          <% else %>
            <li class="nav-link text-light">
              <%= link_to homes_top_path do %><i class="fas fa-home"></i>Home<% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to homes_about_path do %><i class="fas fa-link"></i>About<% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to new_user_registration_path do %><i class="fas fa-user-plus"></i>Signin<% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to new_user_session_path do %><i class="fas fa-sign-in-alt"></i>Login<% end %>
            </li>
          <% end %>
        </nav>

          <%= yield %>
         </ul>
      </div>
    </header>
  </body>
</html>
