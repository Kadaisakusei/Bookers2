<title>Users</title>

<main>
    <h1>Users</h1>

  <table>

    <thead>
        <tr>
            <th>Image</th>
            <th>name</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <% @users.each do |user| %>

    <tr>
      <td><% if user.profile_image.attached? %>
          <%= image_tag user.profile_image, size: "150x150" %>
          <% else %>
          <%= image_tag 'no_image', size: "150x150" %>
          <% end %></td>
      <td><%= user.name %></td>

        <td><%= link_to 'Show', book_path(user.id) %></td>

    </tr>


    <% end %>

  </table>
